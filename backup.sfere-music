#! /bin/bash
set -e

. /usr/local/share/hbackup.sh

volume=/usb
setup

echo "--- Saving /music"
snapshot music \
  nhbackup --repo $volume \
	  --index $today/music \
	  --root /snap/music \
	  --one-file-system \
	  --verbose \
          --exclude '^\.Windows-Friendly' \
          --hint-file /space/root/hints.music \
	  --backup
echo

echo "--- Done"

exit $status
