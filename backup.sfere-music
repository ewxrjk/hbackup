#! /bin/bash
set -e

. /usr/local/share/hbackup.sh

volume=/usb
setup

echo "--- Saving /music"
snapshot mp3 \
  nhbackup --repo $volume \
	  --index $today/music \
	  --root /snap/mp3 \
	  --one-file-system \
	  --verbose \
          --hint-file /space/root/hints.mp3 \
	  --backup
echo

echo "--- Done"

exit $status
